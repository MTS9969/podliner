<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\StuiPodcast.Core\StuiPodcast.Core.csproj" />
    <ProjectReference Include="..\StuiPodcast.Infra\StuiPodcast.Infra.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LibVLCSharp" Version="3.8.4" />
    <PackageReference Include="Serilog" Version="4.3.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="Terminal.Gui" Version="1.14.0" />
    <PackageReference Include="VideoLAN.LibVLC.Windows" Version="3.0.20" />
  </ItemGroup>

    <PropertyGroup>
        <!-- Wird von CI via -p:Version=… (z.B. 0.0.1-rc3) überschrieben -->
        <Version>0.0.0</Version>

        <!-- Numerische Assembly/File-Versionen (ohne rc/beta/etc.) -->
        <AssemblyVersion>$(VersionMajor).$(VersionMinor).0.0</AssemblyVersion>
        <FileVersion>$(VersionMajor).$(VersionMinor).$(VersionPatch).0</FileVersion>

        <!-- Menschlich lesbare Version: darf Suffix haben -->
        <AssemblyInformationalVersion>$(Version)</AssemblyInformationalVersion>

        <!-- Metadaten -->
        <Company>podliner</Company>
        <Product>podliner</Product>
        <Authors>Tim Kicker</Authors>
        <Copyright>© Tim Kicker</Copyright>
        <RepositoryUrl>https://github.com/timkicker/podliner</RepositoryUrl>
        <PackageProjectUrl>https://github.com/timkicker/podliner</PackageProjectUrl>
    </PropertyGroup>


</Project>
